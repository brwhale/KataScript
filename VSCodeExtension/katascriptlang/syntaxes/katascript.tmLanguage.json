{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "KataScript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		}		
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.control.katascript",
				"match": "//[^\\n]*\\n"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.katascript",
				"match": "\\b(if|else|while|for|foreach|func|return)\\b"
			}]
		},
		"constants": {
			"patterns": [
				{
				"name": "constant.character",
				"match": "(<|>|=|!|\\+|-|\\||&|/|\\*|%)"
				},
				{
				"name": "constant.language",
				"match": "\\b(?i)(true|false|print|getline|length|find)\\b"
				},
				{
				"name": "constant.numeric",
				"match": "[0-9]"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.katascript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.katascript",
					"match": "\\\\."
				}
			]
		},
		"variables": {
			"patterns": [
				{
				"name": "variable",
				"match": "\\b[a-zA-Z]+[a-zA-Z0-9]*\\b"
				}
			]
		}		
	},
	"scopeName": "source.katascript"
}