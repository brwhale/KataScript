{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "KataScript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		},		
		{
			"include": "#variables"
		}		
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.control.katascript",
				"match": "//[^\\n]*\\n"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.katascript",
				"match": "\\b(var|if|else|while|for|foreach|func|return|struct)\\b"
			}]
		},
		"constants": {
			"patterns": [
				{
				"name": "constant.character",
				"match": "(<|>|=|!|\\+|-|\\||&|/|\\*|%)"
				},
				{
				"name": "constant.language",
				"match": "\\b(?i)(true|false|null)\\b"
				},
				{
				"name": "constant.numeric",
				"match": "[0-9]"
				}
			]
		},
		"functions": {
			"patterns": [
				{
				"name": "entity.name.function",
				"match": "\\b(?i)(bool|int|float|string|vec3|array|list|dictionary|print|typeof|getline|length|find|erase|sqrt|pow|split|contains|pushback|popback|popfront|back|front|min|max|map|fold|swap|range|sort|toarry|tolist|identity|listindex|applyfunction|copy|sin|cos|tan|clock|timesince|getduration)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.katascript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.katascript",
					"match": "\\\\."
				}
			]
		},
		"variables": {
			"patterns": [
				{
				"name": "variable",
				"match": "\\b[a-zA-Z_]+[a-zA-Z0-9_]*\\b"
				}
			]
		}		
	},
	"scopeName": "source.katascript"
}